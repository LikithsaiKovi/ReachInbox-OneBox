{
  "info": {
    "name": "ReachInbox Onebox API",
    "description": "Complete API collection for ReachInbox Onebox email management system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health & Status",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/health",
              "host": ["{{base_url}}"],
              "path": ["health"]
            },
            "description": "Check if the server is running and healthy"
          }
        },
        {
          "name": "Get Statistics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/stats",
              "host": ["{{base_url}}"],
              "path": ["api", "stats"]
            },
            "description": "Get email statistics and category breakdown"
          }
        }
      ]
    },
    {
      "name": "Account Management",
      "item": [
        {
          "name": "Get Accounts",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/accounts",
              "host": ["{{base_url}}"],
              "path": ["api", "accounts"]
            },
            "description": "Get list of configured IMAP accounts"
          }
        }
      ]
    },
    {
      "name": "Email Operations",
      "item": [
        {
          "name": "Search Emails",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/emails/search?q={{search_query}}&account={{account_id}}&category={{category}}&page=0&size=20",
              "host": ["{{base_url}}"],
              "path": ["api", "emails", "search"],
              "query": [
                {
                  "key": "q",
                  "value": "{{search_query}}",
                  "description": "Search query"
                },
                {
                  "key": "account",
                  "value": "{{account_id}}",
                  "description": "Account ID filter"
                },
                {
                  "key": "category",
                  "value": "{{category}}",
                  "description": "Category filter"
                },
                {
                  "key": "page",
                  "value": "0",
                  "description": "Page number"
                },
                {
                  "key": "size",
                  "value": "20",
                  "description": "Results per page"
                }
              ]
            },
            "description": "Search emails with various filters"
          }
        },
        {
          "name": "Get All Emails",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/emails?limit=20&offset=0",
              "host": ["{{base_url}}"],
              "path": ["api", "emails"],
              "query": [
                {
                  "key": "limit",
                  "value": "20",
                  "description": "Number of emails to return"
                },
                {
                  "key": "offset",
                  "value": "0",
                  "description": "Offset for pagination"
                }
              ]
            },
            "description": "Get all emails with pagination"
          }
        },
        {
          "name": "Get Email by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/emails/{{email_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "emails", "{{email_id}}"]
            },
            "description": "Get specific email by ID"
          }
        },
        {
          "name": "Suggest Reply",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/emails/{{email_id}}/suggest-reply",
              "host": ["{{base_url}}"],
              "path": ["api", "emails", "{{email_id}}", "suggest-reply"]
            },
            "description": "Generate AI-powered reply suggestion using RAG"
          }
        }
      ]
    },
    {
      "name": "Integrations",
      "item": [
        {
          "name": "Test Integrations",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/test-integrations",
              "host": ["{{base_url}}"],
              "path": ["api", "test-integrations"]
            },
            "description": "Test Slack and webhook integrations with sample data"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:4000",
      "description": "Base URL for the ReachInbox Onebox API"
    },
    {
      "key": "search_query",
      "value": "test",
      "description": "Search query for email search"
    },
    {
      "key": "account_id",
      "value": "account_1",
      "description": "Account ID for filtering"
    },
    {
      "key": "category",
      "value": "Interested",
      "description": "Email category for filtering"
    },
    {
      "key": "email_id",
      "value": "sample-email-id",
      "description": "Email ID for specific operations"
    }
  ]
}
